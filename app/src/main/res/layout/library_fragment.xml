<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library_background">

    <TextView
        android:id="@+id/lib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:gravity="center_horizontal"
        android:text="@string/library"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/shuffle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lib"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="@string/shuffle_play"
        android:textColor="@android:color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_library"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shuffle"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent" />

</RelativeLayout>