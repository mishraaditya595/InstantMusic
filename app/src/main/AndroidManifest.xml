<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.theadityamishra.musictunes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="xyz.theadityamishra.musictunes.ui.CurrentMusic" />
        <activity
            android:name="xyz.theadityamishra.musictunes.ui.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="xyz.theadityamishra.musictunes.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeFullScreen" />
    </application>

</manifest>